<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="160dp">

    <TextView
        android:id="@+id/tvBemVindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-vindo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/etData"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Data"
        app:layout_constraintTop_toBottomOf="@id/tvBemVindo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="wrap"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etHorario"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="HorÃ¡rio"
        app:layout_constraintTop_toBottomOf="@id/etData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="wrap"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnAgendar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Agendar"
        app:layout_constraintTop_toBottomOf="@id/etHorario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="wrap"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ed195c"/>

    <Button
        android:id="@+id/btnMinhasConsultas"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Visualizar minhas consultas"
        app:layout_constraintTop_toBottomOf="@id/btnAgendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="wrap"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ed195c"/>
</androidx.constraintlayout.widget.ConstraintLayout>
